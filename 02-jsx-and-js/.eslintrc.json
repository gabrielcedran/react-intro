{
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:react/recommended",
    "plugin:jsx-a11y/recommended",
    "plugin:react-hooks/recommended",
    "prettier"
  ], //eslint:recommended is the "standard" one. Other famous one is airbnb. "prettier" does not add new rules but just deactivate the ones cover by it.
  "rules": {
    "react/prop-types": 0,
    "react/react-in-jsx-scope": 0
  },
  "plugins": ["react", "import", "jsx-a11y"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": { "jsx": true }
  },
  "env": { "es6": true, "browser": true, "node": true },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
